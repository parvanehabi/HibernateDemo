<hibernate-configuration>
  <session-factory>

    <property name="connection.driver_class">org.h2.Driver</property>
    <property name="connection.url">jdbc:h2:./data/contactmgr</property>

    <property name="dialect">org.hibernate.dialect.H2Dialect</property>

    <property name="hbm2ddl.auto">update</property>
    <property name="show_sql">true</property>

    <mapping class="com.fanap.hibernate.data.model.Student"/>
    <mapping class="com.fanap.hibernate.data.model.Course"/>
    <mapping class="com.fanap.hibernate.data.model.Master"/>
    <mapping class="com.fanap.hibernate.data.model.Admin"/>
    <mapping class="com.fanap.hibernate.data.model.Phone"/>
    <mapping class="com.fanap.hibernate.data.model.StudentCourse"/>


  </session-factory>
</hibernate-configuration>